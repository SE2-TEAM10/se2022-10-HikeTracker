    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend",
            "request": "launch",
            "type": "dart",
            "program": "frontend/lib/main.dart",
        },
        {
            "name": "Frontend - Web",
            "request": "launch",
            "type": "dart",
            "program": "frontend/lib/main.dart",
            "args": ["-d", "chrome","--web-port", "8000"],
        },
        {
            "name": "Backend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend/",
            "program": "index.js",
        }
    ]
}